{
  "manifest_version": 3,
  "name": "Protocolos CIVE",
  "version": "2.0",
  "description": "Descripción de mi extensión",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://cive.ddns.net/*",
    "https://cive.ddns.net/*",
    "file:///*",
    "http://192.168.1.13:8085/*",
    "http://localhost:8085/*",
    "http://127.0.0.1:8085/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "faco.png",
        "icon.png",
        "css/popup.css",
        "css/floating_popup.css",
        "css/floating_button.css",
        "js/floatingButton.js",
        "js/examenes.js",
        "js/procedimientos.js",
        "js/consulta.js",
        "js/popup/popup.html",
        "js/popup/popup.css",
        "js/cv/cv.html",
        "js/cv/cv.css",
        "js/eco/eco.html",
        "js/eco/eco.css",
        "js/retino/retino.html",
        "js/retino/retino.css",
        "js/angulo/angulo.html",
        "js/angulo/angulo.css",
        "js/octm/octm.html",
        "js/octm/octm.css",
        "js/auto/auto.html",
        "js/auto/auto.css",
        "js/angio/angio.html",
        "js/angio/angio.css",
        "data/examenes.json",
        "data/procedimientos.json"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/examenes.js",
        "js/consulta.js",
        "js/content_script.js"
      ]
    }
  ]
}
