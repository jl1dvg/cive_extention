{
  "manifest_version": 3,
  "name": "Mi Extensión",
  "version": "1.0",
  "description": "Descripción de mi extensión",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
